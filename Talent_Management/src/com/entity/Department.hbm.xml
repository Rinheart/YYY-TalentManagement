<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entity.Department" table="department" schema="talent_management">
        <id name="departmentId" column="DepartmentID"/>
        <property name="enterpriseId" column="EnterpriseID"/>
        <property name="departmentName" column="DepartmentName"/>
        <property name="departmentHead" column="DepartmentHead"/>
        <property name="staffNumber" column="StaffNumber"/>
        <property name="jobDescription" column="JobDescription"/>
    </class>
</hibernate-mapping>